<div class="card">
  <h5 class="card-header">
    <% if @mode != "signup" %>
      Edit Student Information
    <% elsif student_logged_in? %>
      Activate Your Account
    <% else %>
      Edit Account Information for Student Sign-Up
    <% end %>
  </h5>
  <div class="card-body">
    <% if @mode == "signup" and student_logged_in? %>
      <p class="card-text">Your account is not activated yet. Please activate your account</p>
      <p class="card-text">Please verify that the name below is yours. Contact the instructors for questions or to update your name.</p>
    <% end %>
    <%= render 'form', student: @student, ins_mode: params[:mode], sign_mode: @mode %>
  </div>
</div>

<div class="mb-2">
  <h1 class="d-inline">Students</h1>
  <%= link_to 'Add', new_student_path, class: "btn btn-primary float-right" %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Account Activated</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @students.empty? %>
      <tr>
        <td colspan=4>No students yet! Press "Add" to make one</td>
      </tr>
    <% end %>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.signed ? "Yes" : "No" %></td>
        <td>
          <%= link_to 'Show', student %><br>
          <%= link_to 'Edit', edit_student_path(id: student) %><br>
          <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

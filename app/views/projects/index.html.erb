<div class="mb-2">
  <h1 class="d-inline">Projects</h1>
  <%= link_to 'Add', new_project_path, class: "btn btn-primary float-right" %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @projects.empty? %>
      <tr>
        <td colspan=3>No projects yet! Press "Add" to make one</td>
      </tr>
    <% end %>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.is_open ? "Open" : "Closed" %></td>
        <td>
          <%= link_to 'Show', project %><br>
          <%= link_to 'Edit', edit_project_path(project) %><br>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %><br>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

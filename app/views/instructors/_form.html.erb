<%= form_with(model: instructor) do |form| %>
  <% if instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
        <% instructor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%if !instructor.signed && ins_mode == "instructor"%>
    <input type=hidden name=instructor[signed] value=true>
  <%end%>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%if ins_mode == "instructor"%>
      <%= form.submit "Set up"%>
    <%elsif @mode == "signup"%>
      <%= form.submit "Sign up account"%>
    <%else%>
      <%= form.submit "Save changes"%>
    <%end%>
  </div>
<% end %>

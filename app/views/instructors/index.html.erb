<div class="mb-2">
  <h1 class="d-inline">Instructors</h1>
  <%= link_to 'Add', new_instructor_path, class: "btn btn-primary float-right" %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.name %></td>
        <td><%= instructor.email %></td>
        <td>
          <%= link_to 'Show', instructor %><br>
          <%if inst_logged_in? instructor%>
            <%= link_to 'Edit', edit_instructor_path(instructor) %><br>
          <%end%>
          <%= link_to 'Delete', instructor, method: :delete, data: { confirm: 'Do you really want to delete this instructor?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

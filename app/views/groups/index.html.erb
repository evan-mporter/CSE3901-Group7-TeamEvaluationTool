<div class="mb-2">
  <h1 class="d-inline">Groups</h1>
  <%= link_to 'Add', new_group_path, class: "btn btn-primary float-right" %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Students</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @groups.empty? %>
      <tr>
        <td colspan=3>No groups yet! Press "Add" to make one</td>
      </tr>
    <% end %>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.students.map{ |s| link_to s.name, s }.join(", ").html_safe %></td>
        <td>
          <%= link_to 'Show', group %><br>
          <%= link_to 'Edit', edit_group_path(group) %><br>
          <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
